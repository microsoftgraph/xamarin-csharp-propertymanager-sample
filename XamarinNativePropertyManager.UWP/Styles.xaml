    <!--Selectors-->
    <controls:ConversationMessageTemplateSelector x:Key="ConversationMessageTemplateSelector"/>
    
    <!--Templates-->
    <DataTemplate x:Key="ConversationMessageLeftTemplate">
        <Grid FlowDirection="LeftToRight" Margin="15,9">
            <Polygon Style="{StaticResource MessageTipPolygonStyle}"
                     Stroke="{StaticResource AccentColorBrush}" 
                     Fill="{StaticResource AccentColorBrush}" 
                     Points="0,0 12,10, 0,10" />
            <StackPanel Style="{StaticResource MessageTextFrameStackPanelStyle}"
                        Background="{StaticResource AccentColorBrush}">
                <TextBlock Text="{Binding Preview}" TextWrapping="Wrap" 
                           Foreground="White"/>
                <TextBlock Style="{StaticResource FadedBodyTextBlock}"
                           Text="{Binding UniqueSenders[0]}" Foreground="White"/>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ConversationMessageRightTemplate">
        <Grid FlowDirection="RightToLeft" Margin="15,9">
            <Polygon Style="{StaticResource MessageTipPolygonStyle}"
                     Stroke="{StaticResource DarkAccentColorBrush}" 
                     Fill="{StaticResource DarkAccentColorBrush}" 
                     Points="0,0 15,10, 0,10" />
            <StackPanel Style="{StaticResource MessageTextFrameStackPanelStyle}"
                        Background="{StaticResource DarkAccentColorBrush}">
                <TextBlock Text="{Binding Preview}" TextWrapping="Wrap" 
                           Foreground="White"/>
                <TextBlock Style="{StaticResource FadedBodyTextBlock}"
                           Text="{Binding UniqueSenders[0]}" Foreground="White"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
